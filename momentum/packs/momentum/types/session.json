{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session",
  "description": "Active focus session state",
  "type": "object",
  "properties": {
    "goal": {
      "type": "string",
      "description": "The goal for this focus session"
    },
    "start_time": {
      "type": "integer",
      "description": "Unix timestamp when the session started"
    },
    "time_expected": {
      "type": "integer",
      "description": "Expected duration in minutes"
    },
    "reflection_uuid": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "UUID of the reflection document for this session"
    }
  },
  "required": ["goal", "start_time", "time_expected"]
}