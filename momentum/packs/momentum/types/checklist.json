{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checklist",
  "description": "Pre-session checklist state",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "description": "Checklist items with completion status",
      "items": {
        "type": "object",
        "properties": {
          "item": {
            "type": "string",
            "description": "The checklist item text"
          },
          "completed": {
            "type": "boolean",
            "description": "Whether the item is completed"
          }
        },
        "required": ["item", "completed"]
      }
    }
  },
  "required": ["items"]
}